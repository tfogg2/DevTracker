
<%= simple_form_for @message, remote: true do |f| %>
  <%= f.text_area :body, data: {textarea: 'message'}, placeholder: "Write a message", label: false %>
  <%= f.hidden_field :conversation_id, value: conversation.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.input :image, as: :file, label: false %>
  <%= f.submit "Send", data: {send: 'message'}, class: "send-message"%>
<% end %>
