<div class="home-form">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs home-inputs">
      <%= f.input :name, autofocus: true, placeholder: "Name", :autocomplete => :off %>
      <%= f.input :email, required: true, placeholder: "Your email address", :autocomplete => :off %>
      <%= f.input :password, required: true, placeholder: "Create a password", :autocomplete => :off %>
       <!-- hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), -->
    </div>

    <div class="form-actions home-action">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>
</div>
