#fill
  #conversation-box
    #project-message-box
      #search-projects
        = render 'projects/search'
      #modal-dialog
        #search-modal
          
      #project-list

        /.project-message-name = link_to project_conversation_path(project, @conversation),  data:{'project-id': project.id, 'conversation-id': @conversation.id}, class:'id' do
        = render 'project_list'
    .conversation-header
      p.p-name = link_to @project.name, project_path(@project), data:{'project-id': @project.id, 'conversation-id': @conversation.id}
      p.p-description = @project.description
    /- if @conversation.messages.any?
    #conversation
      - if @conversation.messages.any?
      -else
        .create_messages
          h1 Start a conversation
      end
      = render partial: "messages/message", collection: @conversation.messages
      div class="panel-body hidden" id="messages" data-conversation-id= @conversation.id data-user-name= current_user.name


    #new-message
      = render partial: 'messages/message_form', locals: {message: @message, conversation: @conversation}
