<!DOCTYPE html>
<html>
  <head>
    <title>Freelancer Dashboard</title>
    <%= csrf_meta_tags %>
    <%= display_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="modal" data-turbolinks="false">
      <div id="modal-holder"></div>
    </div>
    <% unless current_page?(root_path) %>
      <div id="top-bar">
        <h1 class="logo" data-turbolinks="false"><%= link_to "FreeDash", root_path %></h1>
        <ul id="nav">
          <%- if user_signed_in? %>
             <!-- <li><%#link_to "Dashboard", user_path(current_user) %></li> -->
             <!-- <li><%# link_to current_user.email, user_path(current_user) %>   |</li> -->
             <%# if @project && @conversation %>
               <!-- <li><%# link_to "Chat", project_conversation_path(@project, @conversation), :controller => "users" %></li> -->
             <%# end %>
             <!-- <span>|</span> -->
             <li><%= link_to "Logout", destroy_user_session_path, :controller => "users", method: :delete %></li>
          <%- else %>
             <li><%= link_to "Login", new_user_session_path %></li>
             <li><%= link_to "Sign up", new_user_registration_path %></li>
          <%- end %>
        </ul>
      </div>
    <% end %>
    <div id="notifications"></div>

    <div id="content" data-turbolinks="false">
      <%= yield %>
    </div>

    <%= render "layouts/footer"  unless @skip_footer %>
  </body>

</html>
